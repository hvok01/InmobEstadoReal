@model EstadoReal.Models.Inmueble

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/EmpleadoDetalles.css" type="text/css" rel="stylesheet" />

<div class="contenedor-nav">
    <nav>
        <input type="checkbox" id="menu" class="hidden" />
        <label class="logo-Volver" for="menu"><img src="~/img/VolverIcon.png" alt="Volver" /></label>
        <label class="logo-1" for="menu"><img src="~/img/MenuBlack.png" alt="Menu" /></label>
        <div class="logo-2"><a asp-action="Index"><img src="~/img/ERIcon1Black.png" alt="Estado Real" /></a></div>
        <div class="logo-3"><a asp-controller="Home" asp-action="Login"><img src="~/img/SalirIcon.png" alt="Cerrar Sesion" /></a></div>
    </nav>
</div>

<div class="nav-display" id="nav">
    <div><a asp-controller="Propietario" asp-action="index">Propietarios</a></div>
    <div><a asp-controller="Inmueble" asp-action="index">Inmuebles</a></div>
    <div><a asp-controller="Inquilino" asp-action="index">Inquilinos</a></div>
    <div><a asp-controller="Contrato" asp-action="index">Contratos</a></div>
    <div><a asp-controller="Pago" asp-action="index">Pagos</a></div>
    <div><a asp-controller="Empleado" asp-action="Index">Configuracion</a></div>
    <div><a asp-controller="Home" asp-action="Logout">Salir</a></div>
</div>


<div class="contenedor-formulario-registrar">

    <div class="contenedor-bienvenida">
        <h2>¿Está seguro de borrar este inmueble?</h2>
    </div>

    <div class="contenedor-formulario">
        <div class="contendor-f1">
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.Direccion)</p>
            </div>
            <div class="form-group data">
                <p>@Html.DisplayFor(model => model.Direccion)</p>
            </div>
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.UsoResidencial)</p>
            </div>
            <div class="form-group data">
                @if (Model.UsoResidencial == 1)
                {
                    <p class="col-sm-10">
                        Sí
                    </p>
                }
                else
                {
                    <p class="col-sm-10">
                        No
                    </p>
                }
            </div>
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.Tipo)</p>
            </div>
            <div class="form-group data">
                <p>@Html.DisplayFor(model => model.Tipo)</p>
            </div>
        </div>
        <div class="contendor-f1">
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.Ambientes)</p>
            </div>
            <div class="form-group data">
                <p>@Html.DisplayFor(model => model.Ambientes)</p>
            </div>
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.Precio)</p>
            </div>
            <div class="form-group data">
                <p>@Html.DisplayFor(model => model.Precio)</p>
            </div>
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.Disponibilidad)</p>
            </div>
            <div class="form-group data">
                @if (Model.Disponibilidad == 1)
                {
                    <p class="col-sm-10">
                        Disponible
                    </p>
                }
                else
                {
                    <p class="col-sm-10">
                        Ocupado
                    </p>
                }
            </div>
            <div class="form-group">
                <p>@Html.DisplayNameFor(model => model.IdPropietario)</p>
            </div>
            <div class="form-group data">
                <p>@Html.DisplayFor(model => model.IdPropietario)</p>
            </div>
        </div>
        <div class="contendor-f1">
            <div class="form-group ultimo">
                <form>
                    <a asp-action="Index">Volver</a>
                    <input type="hidden" name="IdInmueble" readonly value="@Html.DisplayFor(model => model.IdInmueble)" />
                    <input type="submit" value="borrar" class="btn-1" />
                </form>
            </div>
        </div>
    </div>

</div>

<script>

    let check = document.getElementById("menu");
    let nav = document.getElementById("nav");
    let contenido = document.getElementById("mostrar");

    check.addEventListener('click', () => {
        if (check.checked) {
            nav.style.display = "flex";
            contenido.style.display = "none";
        } else {
            nav.style.display = "none";
            contenido.style.display = "flex";
        }
    });

</script>